head
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
	title= metaTitle
	meta(name="description", content=pkg.description)

	meta(http-equiv="Content-type", content="text/html;charset=UTF-8")
	meta(name="viewport", content="width=device-width, initial-scale=1.0")

	<!-- Open Graph data -->
	meta(property="og:title", content="#{pkg.title}")
	meta(property="og:description", content="#{pkg.description}")
	meta(property="og:site_name", content="#{pkg.title}")
	meta(property="og:type", content="website")
	meta(property="og:url", content="#{pkg.url}")
	meta(property="og:locale", content="en_GB")
	meta(property="og:image", content="http://www.christmastracker.com/img/icons/social-200.jpg")

	//mobile and favicons
	link(rel="shortcut icon" href="/img/icons/favicon.ico" type="image/x-icon")
	<!-- Apple Touch Icons -->
	link(rel="apple-touch-icon" href="/img/icons/apple-touch-icon.png")
	link(rel="apple-touch-icon" sizes="57x57" href="/img/icons/apple-touch-icon-57x57.png")
	link(rel="apple-touch-icon" sizes="114x114" href="/img/icons/apple-touch-icon-114x114.png")
	link(rel="apple-touch-icon" sizes="144x144" href="/img/icons/apple-touch-icon-144x144.png")
	link(rel="apple-touch-icon" sizes="60x60" href="/img/icons/apple-touch-icon-60x60.png")
	link(rel="apple-touch-icon" sizes="120x120" href="/img/icons/apple-touch-icon-120x120.png")
	link(rel="apple-touch-icon" sizes="76x76" href="/img/icons/apple-touch-icon-76x76.png")
	link(rel="apple-touch-icon" sizes="152x152" href="/img/icons/apple-touch-icon-152x152.png")
	<!-- Windows 8 Tile Icons -->
	meta(name="msapplication-square70x70logo" content="/img/icons/smalltile.png")
	meta(name="msapplication-square150x150logo" content="/img/icons/mediumtile.png")
	meta(name="msapplication-wide310x150logo" content="/img/icons/widetile.png")
	meta(name="msapplication-square310x310logo" content="/img/icons/largetile.png")
		
	// Application styles
	link(rel='stylesheet', href='/css/kickoff.css?v=#{pkg.version}')

	// Modernizr
	script(src="/js/libs/modernizr-build.min.js", async)